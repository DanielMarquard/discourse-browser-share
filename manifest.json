{
	"description": "Adds a browser button for sharing webpages to Crit Cola's website.",
	"manifest_version": 2,
	"name": "Share on Crit Cola",
	"version": "0.1",

	"background": {
		"scripts": ["background.js"]
	},
 
	"browser_action": {
		"default_icon": {
			"16": "icons/crit-cola-icon-16.png",
			"32": "icons/crit-cola-icon-32.png",
			"48": "icons/crit-cola-icon-48.png"
		},
		"default_title": "Share on Crit Cola"
	},
	
	"permissions": ["activeTab"]
}
